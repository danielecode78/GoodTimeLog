<% layout("/layouts/boilerplate") %>
<link rel="stylesheet" href="/css/stars.css" />

<div class="container">
  <div class="row">
    <div class="col-md-6 ps-0">
      <div id="carouselExample" class="carousel slide">
        <div class="carousel-inner">
          <% for (let img of exp.images) { %>
          <div
            class="carousel-item <%= img.filename === exp.images[0].filename ? 'active' : '' %>">
            <img src="<%= img.url %>" class="card-img-top rounded" alt="..." />
          </div>
          <% } %>
        </div>
        <% if (exp.images.length > 1) { %>
        <button
          class="carousel-control-prev"
          type="button"
          data-bs-target="#carouselExample"
          data-bs-slide="prev"
          data-bs-theme="dark">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button
          class="carousel-control-next"
          type="button"
          data-bs-target="#carouselExample"
          data-bs-slide="next"
          data-bs-theme="dark">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
        <% } %>
      </div>
      <div class="py-2">
        <h2 class="card-title mb-2"><%= exp.description %></h2>
        <h6 class="card-text">
          <i
            >presso
            <span class="text-warning-emphasis"><%= exp.title %></span></i>
        </h6>
            <div>
            <h6>
            <i>
              <a
              href="https://www.google.com/maps/search/?api=1&query=<%= exp.title %>"
              class="text-primary-emphasis d-inline-block mt-1"
              target="_blank"
              rel="noopener noreferrer"
              ></i>
          <i class="fas fa-map-marker-alt"></i> Vedi su Google Maps</a
            >
            </h6>
            </div>
        
      </div>
    </div>
    <div class="col-md-6 px-0">
      <div class="card-body">
        <ul class="list-group list-group-flush">
          <li class="list-group-item ps-0">
              <div>
                <h5 class="d-inline">Località:</h5>
                <span class="d-inline"><%= exp.location %></span>
              </div>
              <div>
                <a
                  href="https://www.google.com/maps/search/?api=1&query=<%= exp.coordinates.lat %>,<%= exp.coordinates.lon %>"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-primary-emphasis d-inline-block mt-2">
                  <h6><i class="fas fa-map-marker-alt"></i> Vedi su Google Maps</h6>
                </a>  
              </div>
          </li>
          <li class="list-group-item ps-0">
            <h5 class="d-inline-block">Data:</h5>
            <span class="d-inline-block"><%= dateit(exp.date) %></span>
          </li>
          <li class="list-group-item ps-0">
            <h5 class="d-inline-block">Tipologia:</h5>
            <span class="d-inline-block"><%= exp.type %></span>
          </li>
          <li class="list-group-item ps-0">
            <div class="container px-0 d-flex align-items-center">
              <h5 class="d-inline-block pt-2 pe-2">Voto:</h5>
              <span
                class="d-inline-block starability-result"
                data-rating="<%= exp.rate %>"></span>
            </div>
          </li>
          <li class="list-group-item ps-0">
            <h5 class="d-inline-block">Prezzo:</h5>
            <span class="d-inline-block">€<%= exp.price %>/ a persona</span>
          </li>
          <li class="list-group-item ps-0">
            <h5 class="d-inline-block">Desidero ritornare:</h5>
            <span class="d-inline-block"><%= exp.revisit ? "Si" : "No" %></span>
          </li>
          <li class="list-group-item ps-0">
            <h5 class="fst-italic">
              Creato da
              <span class="text-warning-emphasis"
                ><%= exp.author.username %></span
              >
            </h5>
          </li>
        </ul>
        <% if (currentUser && exp.author._id.equals(currentUser._id)) { %>
        <div class="card-body">
          <div>
            <button
              class="btn btn-success"
              onclick="window.location.href='/experiences/<%= exp._id %>/edit'">
              Modifica
            </button>
            <button
              class="btn btn-danger"
              data-bs-toggle="modal"
              data-bs-target="#confirmDeleteModal">
              Elimina
            </button>
            <div
              class="modal fade"
              id="confirmDeleteModal"
              tabindex="-1"
              aria-labelledby="confirmDeleteLabel"
              aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="confirmDeleteLabel">
                      Conferma eliminazione
                    </h5>
                    <button
                      type="button"
                      class="btn-close"
                      data-bs-dismiss="modal"
                      aria-label="Chiudi"></button>
                  </div>
                  <div class="modal-body">
                    Sei sicuro di voler eliminare questa esperienza?
                  </div>
                  <div class="modal-footer">
                    <button
                      type="button"
                      class="btn btn-secondary"
                      data-bs-dismiss="modal">
                      No
                    </button>
                    <form
                      class="d-inline"
                      action="/experiences/<%= exp._id %>?_method=DELETE"
                      method="POST">
                      <button type="submit" class="btn btn-danger">
                        Sì, elimina
                      </button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
<hr />
<div class="pb-3">
  <h4 class="card-title">Esperienza</h4>
  <p class="card-text"><%= exp.story %></p>
</div>
<hr />
<div>
  <div>
    <% if (currentUser) { %>
    <h5 class="card-title pb-1 text-secondary"><i>Lascia un commento</i></h5>
    <form
      action="/experiences/<%= exp._id %>/comments"
      method="POST"
      class="needs-validation"
      novalidate>
      <div class="mb-3">
        <label class="form-label mt-2" for="text"></label>
        <textarea
          class="form-control"
          name="comment[text]"
          id="text"
          cols="30"
          row="10"
          required></textarea>
      </div>
      <button class="btn btn-primary">Invia</button>
    </form>
    <% } %>
    <div class="mb-3">
      <% exp.comments.forEach(element => { %>
      <div class="card mt-3">
        <div class="card-header">
          <Span class="text-warning-emphasis fw-bold fst-italic"
            ><%= element.author.username %></Span
          >
        </div>
        <div class="card-body d-flex justify-content-between">
          <span> <%= element.text %></span>
          <% if (currentUser && element.author._id.equals(currentUser._id)) { %>
          <form
            method="POST"
            action="/experiences/<%= exp._id %>/comments/<%= element._id %>?_method=DELETE">
            <button
              type="submit"
              class="btn p-0 border-0 bg-transparent hover-opacity"
              aria-label="Close">
              <img
                src="/images/closebutton.png"
                alt="Elimina"
                width="24"
                height="24" />
            </button>
          </form>
          <% } %>
        </div>
      </div>
      <% }); %>
    </div>
  </div>
</div>
