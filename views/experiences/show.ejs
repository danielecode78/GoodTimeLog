<% layout("/layouts/boilerplate") %>
<link rel="stylesheet" href="/css/stars.css" />
<div class="py-2">
  <h2 class="card-title mb-2 reduce-title">
    <%= exp.description %>
  </h2>
  <div>
    <div class="d-inline-block">
      <h6 class="card-text">
        <i>presso <span class="text-warning-emphasis"><%= exp.title %></span></i>
      </h6>
    </div>
    <div class="d-inline-block">
      <h6>
        <a href="https://www.google.com/maps/search/?api=1&query=<%= exp.title %>" class="text-primary-emphasis d-inline-block mt-1" target="_blank" rel="noopener noreferrer" aria-label="Apri la posizione su Google Maps">
          <i class="fas fa-map-marker-alt"></i> Vedi su Google Maps</a>
      </h6>
    </div>
  </div>
</div>
<div class="container border-top border-bottom border-secondary-subtle pb-3">
  <div class="row justify-content-center">
    <div class="col-12 col-md-auto fixed-col ps-0">
      <div id="carouselExample" class="carousel slide mt-3">
        <div class="carousel-inner">
          <% for (let img of exp.images) { %>
          <div class="carousel-item <%= img.filename === exp.images[0].filename ? 'active' : '' %>">
            <img src="<%= img.url %>" class="card-img-top rounded" alt="Foto dell’esperienza: <%= exp.title %>" />
          </div>
          <% } %>
        </div>
        <% if (exp.images.length > 1) { %>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev" data-bs-theme="dark">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next" data-bs-theme="dark">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
        <% } %>
      </div>
    </div>
    <div class="col-12 col-md content-col px-0 mt-3">
      <div class="card-body">
        <ul class="list-group list-group-flush mt-3">
          <li class="list-group-item ps-0 pt-0">
            <div>
              <h5 class="d-inline">Località:</h5>
              <span class="d-inline"><%= exp.location %></span>
            </div>
            <div>
              <a href="https://www.google.com/maps/search/?api=1&query=<%= exp.coordinates.lat %>,<%= exp.coordinates.lon %>" target="_blank" rel="noopener noreferrer" class="text-primary-emphasis d-inline-block mt-2">
                <h6>
                  <i class="fas fa-map-marker-alt"></i> Vedi su Google Maps
                </h6>
              </a>
            </div>
          </li>
          <li class="list-group-item ps-0">
            <h5 class="d-inline-block">Data:</h5>
            <span class="d-inline-block"><%= dateit(exp.date) %></span>
          </li>
          <li class="list-group-item ps-0">
            <h5 class="d-inline-block">Tipologia:</h5>
            <span class="d-inline-block"><%= exp.type %></span>
          </li>
          <li class="list-group-item ps-0">
            <div class="container px-0 d-flex align-items-center">
              <h5 class="d-inline-block pt-2 pe-2">Voto:</h5>
              <span class="d-inline-block starability-result" data-rating="<%= exp.rate %>" aria-label="Valutazione: <%= exp.rate %> stelle"></span>
            </div>
          </li>
          <li class="list-group-item ps-0">
            <h5 class="d-inline-block">Prezzo:</h5>
            <span class="d-inline-block">€<%= exp.price %>/ a persona</span>
          </li>
          <li class="list-group-item ps-0">
            <h5 class="d-inline-block">Desidero ritornare:</h5>
            <span class="d-inline-block"><%= exp.revisit ? "Si" : "No" %></span>
          </li>
          <li class="list-group-item ps-0">
            <h5 class="fst-italic">
              Creato da
              <span class="text-warning-emphasis"><%= exp.author.username %></span>
            </h5>
          </li>
        </ul>
        <% if (currentUser && exp.author._id.equals(currentUser._id)) { %>
        <div class="card-body">
          <div class="d-flex gap-2">
            <button role="button" class="btn-fixed btn btn-success flex-grow-1" aria-label="Modifica esperienza" onclick="window.location.href='/experiences/<%= exp._id %>/edit'">
              Modifica
            </button>
            <button role="button" class="btn-fixed btn btn-danger flex-grow-1" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal" aria-label="Elimina esperienza">
              Elimina
            </button>
            <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="confirmDeleteLabel ">
                      Conferma eliminazione
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Chiudi"></button>
                  </div>
                  <div class="modal-body">
                    Sei sicuro di voler eliminare questa esperienza?
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                      No
                    </button>
                    <form class="d-inline" action="/experiences/<%= exp._id %>?_method=DELETE" method="POST">
                      <button type="submit" class="btn btn-danger">
                        Sì, elimina
                      </button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
<div class="pb-3">
  <h4 class="card-title my-2">Esperienza</h4>
  <p class="card-text">
    <%= exp.story %>
  </p>
</div>
<hr />
<div>
  <div class="mb-3">
    <% exp.comments.forEach(element => { %>
    <div class="card mt-3">
      <div class="card-header">
        <Span class="text-warning-emphasis fw-bold fst-italic"><%= element.author.username %></Span>
      </div>
      <div class="card-body d-flex justify-content-between">
        <span> <%= element.text %></span>
        <% if (currentUser && element.author._id.equals(currentUser._id)) { %>
        <form method="POST" action="/experiences/<%= exp._id %>/comments/<%= element._id %>?_method=DELETE">
          <button type="submit" class="position-absolute top-0 end-0 border-0 bg-transparent select-button" aria-label="Close" style="margin: 8px; padding: 0; width: 18px; height: 18px;">
            <img src="/images/closebuttonX2.png" alt="Elimina" width="18" height="18" style="border-radius: 3px; display: block;" />
          </button>
        </form>
        <% } %>
      </div>
    </div>
    <% }); %>
  </div>
  <div class="mb-3">
    <% if (currentUser) { %>
    <h5 class="card-title pb-1 text-secondary"><i>Lascia un commento</i></h5>
    <form action="/experiences/<%= exp._id %>/comments" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label class="form-label mt-2" for="text"></label>
        <textarea class="form-control" name="comment[text]" id="text" cols="30" row="10" required aria-label="Scrivi il tuo commento"></textarea>
      </div>
      <button class="btn btn-primary btn-100">Invia</button>
    </form>
    <% } %>
  </div>
</div>